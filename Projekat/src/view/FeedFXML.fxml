<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FeedFXMLController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="100.0" right="100.0" />
         </BorderPane.margin>
         <top>
            <TextArea fx:id="textArea" prefHeight="50.0" prefWidth="548.0" promptText="Share with us your thoughts..." wrapText="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" top="10.0" />
               </BorderPane.margin>
            </TextArea>
         </top>
         <center>
            <VBox fx:id="root" spacing="3.0" style="-fx-background-color: #99022d; -fx-background-color: linear-gradient(to bottom right, #99022d, #a70433);" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></VBox>
         </center>
      </BorderPane>
   </center>
   <top>
      <Button mnemonicParsing="false" onAction="#showPosts" text="Preuzmi" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Button mnemonicParsing="false" onAction="#addPost" text="Posalji" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
